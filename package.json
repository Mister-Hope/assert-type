{
  "name": "@mr-hope/assert-type",
  "version": "1.1.0",
  "description": "A type assert library",
  "keywords": [
    "assert",
    "type"
  ],
  "homepage": "https://github.com/Mister-Hope/assert-type#readme",
  "bugs": {
    "url": "https://github.com/Mister-Hope/assert-type/issues"
  },
  "repository": "github.com:Mister-Hope/assert-type.git",
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "zhangbowang1998@gmail.com",
    "url": "https://mrhope.site"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "dev": "rollup -c -w",
    "lint": "prettier --check --write . && eslint . --ext .js,.ts --fix",
    "lint:check": "prettier --check . && eslint . --ext .js,.ts",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/node": "^14.14.21",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "conventional-changelog-cli": "2.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "rollup": "2.36.1",
    "rollup-plugin-dts": "^2.0.1",
    "sort-package-json": "1.48.1",
    "ts-jest": "^26.4.4",
    "ts-node": "9.1.1",
    "typescript": "4.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
