{
  "name": "@mr-hope/assert-type",
  "version": "1.0.0",
  "description": "A type assert library",
  "keywords": [
    "assert",
    "type"
  ],
  "homepage": "https://github.com/Mister-Hope/assert-type#readme",
  "bugs": {
    "url": "https://github.com/Mister-Hope/assert-type/issues"
  },
  "repository": "github.com:Mister-Hope/assert-type.git",
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "zhangbowang1998@gmail.com",
    "url": "https://mrhope.site"
  },
  "main": "lib/index.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "lint": "prettier --check --write . && eslint . --ext .ts --fix",
    "lint:check": "prettier --check . && eslint . --ext .ts",
    "test": "mocha -r ts-node/register test/*.test.ts",
    "ts:compile": "tsc",
    "ts:watch": "tsc --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run tsc && lint-staged"
    }
  },
  "lint-staged": {
    "*.{md,yml}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/chai": "4.2.14",
    "@types/mocha": "8.0.4",
    "@types/node": "^14.14.12",
    "@typescript-eslint/eslint-plugin": "4.8.2",
    "@typescript-eslint/parser": "4.8.2",
    "chai": "4.2.0",
    "conventional-changelog-cli": "2.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.3.0",
    "lint-staged": "10.5.2",
    "mocha": "8.2.1",
    "prettier": "2.2.1",
    "sort-package-json": "1.48.0",
    "ts-node": "9.1.1",
    "typescript": "4.1.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
