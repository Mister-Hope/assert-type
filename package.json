{
  "name": "@mr-hope/assert-type",
  "version": "3.0.0",
  "description": "A type assert library",
  "keywords": [
    "assert",
    "type"
  ],
  "homepage": "https://github.com/Mister-Hope/assert-type#readme",
  "bugs": {
    "url": "https://github.com/Mister-Hope/assert-type/issues"
  },
  "repository": "github.com:Mister-Hope/assert-type.git",
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mister-hope.com"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "clean": "rimraf dist",
    "dev": "rollup -c rollup.config.ts --configPlugin esbuild -w",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint . --fix",
    "lint:prettier": "prettier --check --write .",
    "prepare": "husky",
    "prepublish": "pnpm clean && pnpm build",
    "test": "vitest run --coverage"
  },
  "nano-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,ts}": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/node": "22.7.4",
    "@vitest/coverage-v8": "2.1.1",
    "conventional-changelog-cli": "5.0.0",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.24.0",
    "eslint": "9.11.1",
    "eslint-config-mister-hope": "0.2.3",
    "husky": "9.1.6",
    "nano-staged": "0.8.0",
    "prettier": "3.3.3",
    "rimraf": "6.0.1",
    "rollup": "4.22.5",
    "rollup-plugin-dts": "6.1.1",
    "rollup-plugin-esbuild": "6.1.1",
    "sort-package-json": "2.10.1",
    "tslib": "2.7.0",
    "typescript": "5.6.2",
    "vite": "5.4.8",
    "vitest": "2.1.1"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
