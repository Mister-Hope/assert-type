{
  "name": "@mr-hope/assert-type",
  "version": "0.0.1",
  "description": "A type assert library",
  "keywords": [
    "assert",
    "type"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "homepage": "https://github.com/Mister-Hope/assert-type#readme",
  "bugs": {
    "url": "https://github.com/Mister-Hope/assert-type/issues"
  },
  "scripts": {
    "lint": "prettier --check --write . && eslint . --ext .ts --fix",
    "lint:check": "prettier --check . && eslint . --ext .ts",
    "tsc": "tsc",
    "test": "mocha -r ts-node/register test/*.test.ts"
  },
  "repository": "github.com:Mister-Hope/assert-type.git",
  "author": {
    "name": "Mr.Hope",
    "email": "zhangbowang1998@gmail.com",
    "url": "https://mrhope.site"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "4.2.11",
    "@types/mocha": "7.0.2",
    "@types/node": "^14.0.22",
    "@typescript-eslint/eslint-plugin": "3.6.0",
    "@typescript-eslint/parser": "3.6.0",
    "@typescript-eslint/typescript-estree": "3.6.0",
    "chai": "4.2.0",
    "conventional-changelog-cli": "2.0.34",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "mocha": "8.0.1",
    "sort-package-json": "1.44.0",
    "prettier": "2.0.5",
    "typescript": "3.9.6",
    "ts-node": "8.10.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "hooks": {
    "pre-commit": "yarn run tsc && lint-staged"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
