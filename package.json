{
  "name": "@mr-hope/assert-type",
  "version": "3.0.0",
  "description": "A type assert library",
  "keywords": [
    "assert",
    "type"
  ],
  "homepage": "https://github.com/Mister-Hope/assert-type#readme",
  "bugs": {
    "url": "https://github.com/Mister-Hope/assert-type/issues"
  },
  "repository": "github.com:Mister-Hope/assert-type.git",
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mister-hope.com"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "clean": "rimraf dist",
    "dev": "rollup -c rollup.config.ts --configPlugin esbuild -w",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint . --ext .js,.ts --fix",
    "lint:prettier": "prettier --check --write .",
    "prepare": "husky install",
    "prepublish": "pnpm clean && pnpm build",
    "test": "vitest run --coverage"
  },
  "engines": {
    "node": ">=18"
  },
  "nano-staged": {
    "*.{md,yml}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@8.12.1",
  "devDependencies": {
    "@types/node": "20.10.3",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "@vitest/coverage-v8": "1.0.1",
    "conventional-changelog-cli": "4.1.0",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.19.8",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.0.1",
    "husky": "8.0.3",
    "nano-staged": "0.8.0",
    "prettier": "3.1.0",
    "rimraf": "5.0.5",
    "rollup": "4.6.1",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-esbuild": "6.1.0",
    "sort-package-json": "2.6.0",
    "tslib": "2.6.2",
    "typescript": "5.3.2",
    "vite": "5.0.5",
    "vitest": "1.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
